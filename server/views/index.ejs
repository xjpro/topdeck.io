<!DOCTYPE html>
<html ng-app="deckstats">
<% include head.ejs %>
<body>

<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
    <div class="container">
        <div class="navbar-header">
            <div class="dropdown">
                <a class="navbar-brand" href="/">
                    topdeck.io
                </a>
            </div>
        </div>
    </div>
</header>

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <h1>topdeck.io</h1>
                <p class="lead">
                    A fancier deck builder for <a href="http://us.battle.net/hearthstone/en/">Hearthstone</a>
                </p>
                <div>
                    <a class="btn btn-primary" href="/decks">Start a deck</a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">

        <h3 class="col-md-12">Most viewed decks</h3>

        <ul class="list-unstyled recently-created">
            <% for(var i = 0; i < recentDecks.length; i++) {
                var deck = recentDecks[i];
                var guid = createGuid(deck._id.toString());
            %>
            <li class="col-md-4">
                <div class="image">
                    <a href="/decks/<%=guid%>">
                        <img src="/img/decks/<%=guid%>.png"/>
                    </a>
                </div>
                <div class="">
                    <h4 class="col-xs-6">
                        <a href="/decks/<%=guid%>"><%=deck.title%></a>
                    </h4>
                    <div class="col-xs-6 text-right">
                        <i class="fa fa-code-fork"></i> <%=deck.forked%>
                        <i class="fa fa-eye"></i> <%=deck.viewed%>
                    </div>
                </div>
                <!--
                <%= deck.hero %>
                    Last updated <%=deck.updated%>
                -->
            </li>
            <%}%>
        </ul>

    </div>

</div>

</body>
</html>